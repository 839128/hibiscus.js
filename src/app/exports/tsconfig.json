{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "stripInternal": true,
    "sourceMap": false,
    "inlineSources": false,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".",
    "rootDir": "",
    "outDir": "../lib"
  },
  "files": [
    "index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot",
    "skipMetadataEmit": true
  }
}
